@model DocumentViewModel

@{
    ViewData["Title"] = "Review Document";
}

<div class="card">
    <div class="card-header">
        <h3>Document Details</h3>
    </div>
    <div class="card-body">
        <p><strong>File Name:</strong> @Model.FileName</p>
        <p><strong>Version:</strong> @Model.Version</p>
        <p><strong>Extension:</strong> @Model.Extension</p>
    </div>
    <div class="card-footer">
        <form asp-action="NewVersion" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="file">Choose a file</label>
                <input type="file" class="form-control" id="file" name="file" accept=".pdf,.txt" />
            </div>

            <input type="hidden" asp-for="FileName" />
            <input type="hidden" asp-for="Extension" />

            <button type="submit" class="btn btn-primary mt-3">Add New Version</button>
        </form>

        <form asp-action="RollbackVersion" method="post">
            <input type="hidden" asp-for="FileName" />
            <button type="submit" class="btn btn-warning mt-3">Back To Previous Version</button>
        </form>
    </div>

    <a asp-action="ManageDocuments" class="btn btn-secondary mt-3">Back to Documents</a>
</div>
