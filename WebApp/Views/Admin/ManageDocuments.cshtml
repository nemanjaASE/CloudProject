@model ManageDocumentsViewModel

@{
    ViewData["Title"] = "Manage Documents";
}

<h1 class="mt-4">Manage Documents</h1>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped mt-4">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>File Name</th>
            <th>Version</th>
            <th>Extension</th>
            <th>Student name:</th>
            <th>Course Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Documents.Any())
        {
            int count = 1;
            foreach (var document in Model.Documents)
            {
                int itemNumber = count + (Model.Page - 1) * Model.PageSize;

                <tr>
                    <td>@itemNumber</td>
                    <td>@document.FileName</td>
                    <td>@document.Version.0</td>
                    <td>@document.Extension</td>
                    <td>@document.StudentFirstName @document.StudentLastName</td>
                    <td>@document.CourseName</td>
                    <td>
                        <a asp-action="Download"
                           asp-route-studentId="@document.StudentId"
                           asp-route-fileName="@document.FileName"
                           asp-route-version="@document.Version"
                           asp-route-extension="@document.Extension" class="btn btn-sm btn-warning" target="_blank">
                            Download
                        </a>
                        <a asp-action="Review"
                           asp-route-studentId="@document.StudentId"
                           asp-route-fileName="@document.FileName"
                           asp-route-version="@document.Version"
                           asp-route-extension="@document.Extension" class="btn btn-sm btn-warning">
                            Review
                        </a>
                        <a asp-action="Delete" 
                           asp-route-fileName="@document.FileName" 
                           asp-route-studentId="@document.StudentId" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this document?');">Delete</a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No documents found.</td>
            </tr>
        }
    </tbody>
</table>
<div class="mt-3">
    <nav>
        <ul class="pagination">
            @if (Model.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ManageDocuments" asp-route-page="@(Model.Page - 1)">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link" asp-action="ManageDocuments" asp-route-page="@i">@i</a>
                </li>
            }
            @if (Model.Page < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ManageDocuments" asp-route-page="@(Model.Page + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>
