@model PagedUserViewModel

@{
    ViewData["Title"] = "Manage Users Analyses";
}

<h1 class="mt-4">Manage Users Analyses</h1>


@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table table-striped mt-4">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Users != null && Model.Users.Any())
        {
            int count = 1;
            foreach (var user in Model.Users)
            {
                int itemNumber = count + (Model.Page - 1) * Model.PageSize;
                <tr>
                    <td>@itemNumber</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>
                        <a asp-action="ShowUserAnalyses" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Show</a>
                    </td>
                </tr>
                count++;
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>

<div class="mt-3">
    <nav>
        <ul class="pagination">
            @if (Model.Page > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ManageAnalyses" asp-route-page="@(Model.Page - 1)">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(Model.Page == i ? "active" : "")">
                    <a class="page-link" asp-action="ManageAnalyses" asp-route-page="@i">@i</a>
                </li>
            }
            @if (Model.Page < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="ManageAnalyses" asp-route-page="@(Model.Page + 1)">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>